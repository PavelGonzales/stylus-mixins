width-between($min, $max)
  $max = $max - 1
  $min = $min - 1

  @media only screen and (min-width : $min * 1px) and (max-width : $max * 1px)
    {block}

height-between($min, $max)
  $max = $max - 1
  $min = $min - 1

  @media only screen and (min-height : $min * 1px) and (max-height : $max * 1px)
    {block}

width-lessthan($v)
  $v = $v - 1

  @media only screen and (max-width : $v * 1px)
    {block}

height-lessthan($v)
  $v = $v - 1

  @media only screen and (max-height : $v * 1px)
    {block}

width-morethan($v)
  $v = $v

  @media only screen and (min-width : $v * 1px)
    {block}

height-morethan($v)
  $v = $v - 1

  @media only screen and (min-height : $v * 1px)
    {block}

width-between-fontsize($w1, $f1, $w2, $f2, $before = false, $after = false)

  if $before
    +width-lessthan($w1)
      font-size $f1 * 1px

  if $after
    +width-morethan($w2)
      font-size $f2 * 1px

  +width-between($w1, $w2)
    font-size calc-between($w1, $f1, $w2, $f2)

calc-between($w1, $f1, $w2, $f2)
  return "calc(%s * 1px + (%s - %s) * (100vw - %s * 1px) / (%s - %s) )" % ($f1 $f2 $f1 $w1 $w2 $w1)